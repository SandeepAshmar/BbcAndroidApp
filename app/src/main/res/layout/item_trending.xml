<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_width="match_parent"
    android:layout_height="256dp"
    android:layout_margin="5dp"
    android:elevation="2dp"
    xmlns:android="http://schemas.android.com/apk/res/android" >
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="256dp">

    <ImageView
        android:id="@+id/img_trending_item"
        android:layout_width="match_parent"
        android:scaleType="fitXY"
        android:layout_height="184dp" />

    <TextView
        android:id="@+id/tv_video_length_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_trending_item"
        android:layout_marginTop="-30dp"
        android:layout_marginStart="16dp"
        android:text="6:20"/>

    <TextView
        android:id="@+id/tv_trending_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:layout_below="@id/img_trending_item"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Inception | from the Director of DARK KNIGHT" />

    <TextView
        android:id="@+id/textViewOptions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_trending_item"
        android:layout_alignParentEnd="true"
        android:textStyle="bold"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:text="&#8942;"
        android:textAppearance="?android:textAppearanceLarge" />

    <TextView
        android:id="@+id/tv_uploaded_by"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_trending_item_title"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="By:Something" />

    <TextView
        android:id="@+id/tv_posted_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_below="@id/tv_trending_item_title"
        android:layout_marginStart="32dp"
        android:layout_toRightOf="@id/tv_uploaded_by"
        android:text="Posted: 12-20-2018" />

</RelativeLayout>
</android.support.v7.widget.CardView>