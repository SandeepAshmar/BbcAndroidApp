<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:layout_margin="5dp">

        <RelativeLayout
            android:id="@+id/rl_scratch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="5dp">
            
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/ic_congo"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#3cf8a51b"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Scratch Card"
                android:textSize="20dp"
                android:textColor="@color/blackColor"
                android:layout_centerInParent="true"/>


        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_couponLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center"
            android:visibility="gone">

            <RelativeLayout
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/reward_point_circle">

                <TextView
                    android:id="@+id/tv_rewardItemPoint"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:textSize="16dp"
                    android:gravity="center"
                    android:hint="10%"
                    android:textColorHint="@color/whiteColor"
                    android:textColor="@color/whiteColor"/>

            </RelativeLayout>

            <TextView
                android:id="@+id/tv_rewardItemDiscountOn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:hint="Discount on amazon Electronics"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textColor="@color/blackColor"
                android:textColorHint="@color/blackColor"/>

            <TextView
                android:id="@+id/tv_rewardItemDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="valid till 9th Dec, 2018"
                android:layout_marginTop="15dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_marginBottom="10dp"/>

        </LinearLayout>

</android.support.v7.widget.CardView>