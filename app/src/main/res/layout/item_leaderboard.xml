<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_userRankLeaderboardItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="123."
            android:textColorHint="@color/blackColor"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/blackColor"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="40dp"
                android:layout_height="40dp">

                <ImageView
                    android:id="@+id/img_leaderboardMadelTop"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:elevation="2dp" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img_leaderboardUserItem"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerInParent="true"/>

            </RelativeLayout>

            <ImageView
                android:id="@+id/img_leaderboardMadelBottom"
                android:layout_width="35dp"
                android:layout_height="15dp"
                android:layout_gravity="center_horizontal" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_leaderboardNameItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="You"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/blackColor"/>

            <TextView
                android:id="@+id/tv_leaderboardCountryItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:hint="country"/>

        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/tv_leaderboardPoints"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="12 xp"
            android:textColor="@color/blackColor"
            android:textColorHint="@color/blackColor"
            android:layout_gravity="center_vertical"/>

</LinearLayout>